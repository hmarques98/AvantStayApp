{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@shared-components/*": ["./shared/components/*"],
      "@shared-models/*": ["./shared/models/*"],
      "@shared/*": ["./shared/*"],
      "@services/*": ["./services/*"],
      "@domains/*": ["./domains/*"],
      "@fonts": ["./shared/styles/theme/fonts"],
      "@api": ["./services/api/index"],
      "@colors": ["./shared/styles/theme/colors"],
      "@theme/*": ["./shared/styles/theme/*"],
      "@utils": ["./shared/utils/*"],
      "@assets/*": ["./assets/*"],
      "react-native-calendars": [
        "../node_modules/@types/react-native-calendars"
      ]
    }
  },
  "exclude": ["./__mocks__"]
}
